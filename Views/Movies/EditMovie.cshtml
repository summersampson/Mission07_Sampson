@model Mission07_Sampson.Models.Movie

<h1>Edit Movie</h1>

<form asp-action="EditMovie" method="post">
    <input type="hidden" asp-for="MovieId" />

    <!-- Title Field -->
    <div class="mb-3">
        <label for="Title">Title:</label>
        <input asp-for="Title" class="form-control" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <!-- Category Dropdown -->
    <div class="mb-3">
        <label for="CategoryId">Category:</label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control" required>
            <option value="">-- Select a Category --</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <!-- Year Field -->
    <div class="mb-3">
        <label for="Year">Year:</label>
        <input asp-for="Year" type="number" class="form-control" required min="1888" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <!-- Director Field -->
    <div class="mb-3">
        <label for="Director">Director:</label>
        <input asp-for="Director" class="form-control" />
    </div>

    <!-- Rating Dropdown -->
    <div class="mb-3">
        <label for="Rating">Rating:</label>
        <select asp-for="Rating" class="form-control" required>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>

    <!-- Edited Checkbox -->
    <div class="mb-3">
        <label>Edited:</label>
        <input asp-for="Edited" type="checkbox" />
    </div>

    <!-- Lent To Field -->
    <div class="mb-3">
        <label for="LentTo">Lent To:</label>
        <input asp-for="LentTo" class="form-control" required />
    </div>

    <!-- Notes Field -->
    <div class="mb-3">
        <label for="Notes">Notes (max 25 characters):</label>
        <input asp-for="Notes" class="form-control" maxlength="25" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="MovieList" class="btn btn-secondary">Cancel</a>
</form>
